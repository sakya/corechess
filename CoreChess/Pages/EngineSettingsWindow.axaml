<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:Projektanker.Icons.Avalonia;assembly=Projektanker.Icons.Avalonia"
        xmlns:controls="clr-namespace:CoreChess.Controls"
        xmlns:i18n="clr-namespace:CoreChess.Localizer"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CoreChess.Views.EngineSettingsWindow"
        ShowInTaskbar="False"
        Width="700" Height="432"
        MinWidth="400" MinHeight="300"
        WindowStartupLocation="CenterOwner"
        Title="CoreChess - Engine settings">

  <DockPanel>
    <controls:TitleBar DockPanel.Dock="Top"/>
    <Grid Margin="15" DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Name="m_Name" Classes="HighlightColor" />
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled">
            <controls:EngineOptions Name="m_EngineOptions"/>
        </ScrollViewer>

        <controls:OkCancelButtons Grid.Row="2" Margin="0,5,0,0" CancelVisible="False" OkClick="OnOkClick" />
    </Grid>
  </DockPanel>
</Window>
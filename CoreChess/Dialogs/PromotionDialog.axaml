<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:CoreChess.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CoreChess.Dialogs.PromotionDialog">

    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
      <Button Name="m_Knight" Click="OnButtonClick"></Button>
      <Button Name="m_Bishop" Click="OnButtonClick"></Button>
      <Button Name="m_Rook" Click="OnButtonClick"></Button>
      <Button Name="m_Queen" Click="OnButtonClick"></Button>
    </StackPanel>
</UserControl>

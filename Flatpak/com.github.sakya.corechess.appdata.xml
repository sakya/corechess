<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>com.github.sakya.corechess</id>
    <name>CoreChess</name>
    <summary>CoreChess is an open source chess GUI for chess engines</summary>
    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <content_rating type="oars-1.1"/>
    <url type="homepage">https://github.com/sakya/corechess</url>
    <url type="bugtracker">https://github.com/sakya/corechess/issues</url>
    <developer_name>Paolo Iommarini</developer_name>
    <description>
        <p>Engines included in the package:</p>
        <ul>
          <li>Stockfish</li>
          <li>Leela Chess Zero</li>
        </ul>
      
        <p>Supported chess engines:</p>
        <ul>
            <li>UCI (Universal Chess Interface) like Stockfish, Komodo and Leela Chess Zero</li>
            <li>CECP (Chess Engine Communication Protocol) like Crafty</li>
        </ul>

        <p>Supported opening book formats:</p>
        <ul>
            <li>Polyglot (BIN)</li>
            <li>Arena opening book (ABK)</li>
            <li>Chessmaster (OBK)</li>
        </ul>
    </description>
    <launchable type="desktop-id">com.github.sakya.corechess.desktop</launchable>
